
@{
    ViewData["Title"] = "Register";
    }
    @section css{
        <link rel="stylesheet" href="~/assets/css/register.css">

    }
    <section id="intro">
        <div class="container">
            <div class="row">
                <div class="register-title d-flex justify-content-center">
                    <b>AlfaKuryer-ə xoş gəlmişsiniz!</b>
                </div>
                <div class="register-description d-flex justify-content-center">
                    <p>Şəxsi hesabınızı yaradın!</p>
                </div>
            </div>
        </div>
    </section>
    <section id="register">
        <div class="container">
            <div class="row">
                <div class="left col-lg-12 col-md-12">
                    <div class="register-form">
                        <div class="title">
                            Qeydiyyat formu
                        </div>
                        <div class="customer-cat">
                            <div class="natural person selected py-2 px-4">
                                <i><span class="iconify" data-icon="ic:baseline-person-outline" data-height="24"></span></i>
                                <span>Fiziki şəxs</span>
                            </div>
                            <div class="juridical person py-2 px-4">
                                <i><span class="iconify" data-icon="bx:buildings" data-height="22"></span></i>
                                <span>Hüquqi şəxs</span>
                            </div>
                        </div>
                        <form method="post" action="https://httpbin.org/post" class="form col-12 natural-person">
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="text" id="name" name="name" placeholder="Ad" min="3" max="12" required>
                                </div>
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="text" id="surname" name="surname" placeholder="Soyad" min="3" max="12" required>
                                </div>
                            </div>
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="email" id="email" name="email" placeholder="Email" maxlength="30" required>
                                </div>
                                <div class="form-group col-5 d-flex">
                                    <select name="phone-number-code" id="phone-number" class="id-type" required>
                                        <option value="050">050</option>
                                        <option value="051">051</option>
                                        <option value="055">055</option>
                                        <option value="099">099</option>
                                        <option value="070">070</option>
                                        <option value="077">077</option>
                                        <option value="060">060</option>
                                        <option value="010">010</option>
                                    </select>
                                    <input type="text" id="phone-number" name="phone-number" class="id-number" minlength="7" maxlength="7" placeholder="Mobil nömrə" required>
                                </div>
                            </div>
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="text" id="date" placeholder="Doğum tarixi" name="birth-date" style="cursor: pointer;" onfocus="(this.type='date')" onblur="(this.type='text')" required>
                                </div>
                                <div class="form-group col-5 d-flex flex-column">
                                    <select name="nationality" id="nationality" class="nationality" required>
                                        <option hidden>Vətəndaşlıq</option>
                                        <option value="resident">Azərbaycan Respublikasının vətəndaşı (Rezident)</option>
                                        <option value="non-resident">Başqa ölkənin vətəndaşı (Qeyri-rezident)</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex">
                                    <select name="id-type" id="id-type" class="id-type" required>
                                        <option value="AZE">AZE</option>
                                        <option value="AA">AA</option>
                                    </select>
                                    <input type="text" id="id-number" name="id-number" class="id-number" minlength="8" maxlength="8" required placeholder="Vəsiqənin nömrəsi">
                                </div>
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="text" id="id-pin" name="id-pin" minlength="7" maxlength="7" required placeholder="FIN kod">
                                </div>
                            </div>
                      
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="password" name="password" id="password" placeholder="Şifrə" minlength="8" maxlength="30" required>
                                </div>
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="password" name="conf-password" id="password" placeholder="Təkrar şifrə" minlength="8" maxlength="30" required>
                                </div>
                            </div>
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex align-items-center gap-2">
                                    <input type="checkbox" id="agreement" name="agreement" required>
                                    <div class="text">
                                        <a asp-controller="about" asp-action="agreement"  style="color: #15b2ec;">
                                            İstifadəçi Şərtləri
                                        </a>
                                        <span style="font-size: 13px">ilə razıyam</span>
                                    </div>
                                </div>
                                <div class="form-group col-5 d-flex">
                                    <a style="color: #EF3340;" href="https://youtu.be/mn-va-DWDmk" target="_blank" class="d-flex align-items-center">
                                        <i><span class="iconify" data-icon="octicon:video-16" data-height="16"></span></i>
                                        <span style="margin-left: .5rem;">Qeydiyyat prosesini izləyin</span>
                                    </a>
                                </div>
                            </div>
                            <div class="btn-wrap d-flex justify-content-center">
                                <button class="register btn" type="submit">
                                    Qeydiyyatdan keç
                                </button>
                            </div>
                        </form>
                        <form method="post" action="https://httpbin.org/post" class="form col-12 juridical-person" style="display: none;">
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="text" id="com-name" name="com-name" placeholder="Şirkətin adı" minlength="3" maxlength="30" required>
                                </div>
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="text" id="tax-num" name="tax-num" placeholder="Şirkətin VÖEN-i" minlength="10" maxlength="10" required>
                                </div>
                            </div>
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="email" id="email" name="email" placeholder="Email" minlength="5" maxlength="30" required>
                                </div>
                                <div class="form-group col-5 d-flex">
                                    <select name="phone-number-code" id="phone-number" class="id-type" required>
                                        <option value="050">050</option>
                                        <option value="051">051</option>
                                        <option value="055">055</option>
                                        <option value="099">099</option>
                                        <option value="070">070</option>
                                        <option value="077">077</option>
                                        <option value="060">060</option>
                                        <option value="010">010</option>
                                    </select>
                                    <input type="text" id="phone-number" name="phone-number" class="id-number" minlength="7" maxlength="7" required placeholder="Mobil nömrə">
                                </div>
                            </div>
                          
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="password" name="password" id="password" placeholder="Şifrə" minlength="8" maxlength="30" required>
                                </div>
                                <div class="form-group col-5 d-flex flex-column">
                                    <input type="password" name="conf-password" id="password" placeholder="Təkrar şifrə" minlength="8" maxlength="30" required>
                                </div>
                            </div>
                            <div class="form-comp">
                                <div class="form-group col-5 d-flex align-items-center gap-2">
                                    <input type="checkbox" id="agreement" name="agreement" required>
                                    <div class="text">
                                        <a asp-controller="about" asp-action="agreement" style="color: #15b2ec;">
                                            İstifadəçi Şərtləri
                                        </a>
                                        <span style="font-size: 13px">ilə razıyam</span>
                                    </div>
                                </div>
                                <div class="form-group col-5 d-flex">
                                    <a style="color: #EF3340;" href="https://youtu.be/mn-va-DWDmk" target="_blank" class="d-flex align-items-center">
                                        <i><span class="iconify" data-icon="octicon:video-16" data-height="16"></span></i>
                                        <span style="margin-left: .5rem;">Qeydiyyat prosesini izləyin</span>
                                    </a>
                                </div>
                            </div>
                            <div class="btn-wrap d-flex justify-content-center">
                                <button class="register btn" type="submit">
                                    Qeydiyyatdan keç
                                </button>
                            </div>
                        </form>
                        <div class="do-you text d-flex justify-content-center gap-2 mt-2">
                            <span style="font-size: 13px">Hesabınız var?</span>
                            <a href="./login.html" style="color: #15b2ec;">Daxil olun!</a>
                        </div>
                    </div>
                </div>
           
            </div>
        </div>
    </section>

    @section Scripts{
        <script src="~/assets/js/register.js"></script>

    }
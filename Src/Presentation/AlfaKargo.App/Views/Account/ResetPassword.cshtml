@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> localizer
@using AlfaKuryer.Application.Dtos.IdentityDtos;
@model ResetPasswordDto
@{
    ViewData["Title"] = "Login";
}

@section css{
    <link rel="stylesheet" href="~/assets/css/login.css">

}

<section id="intro">
    <div class="container">
        <div class="row">

            <div class="faq-description d-flex justify-content-center">
                <p>@localizer["Reset password"]</p>
            </div>
        </div>
    </div>
</section>
<section id="login">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 left">
                <div class="title">
                    <b>@localizer["Reset password"]</b>
                </div>
                <div class="form">
                    <form method="post" class="form-group">
                        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="email">
                            <label for="email"> @localizer["Password"]</label> <br>
                            <input type="password" asp-for="Password" required> <br>
                        </div>
                        <div class="password">
                            <label for="Password">@localizer["Again Password"]</label> <br>
                            <input type="password" asp-for="VerifyPassword" required> <br>
                        </div>
                        <input hidden asp-for="Email" />
                        <input hidden asp-for="Token" />

                        <button type="submit">@localizer["Reset password"]</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="~/assets/js/reset-modal.js"></script>
 }
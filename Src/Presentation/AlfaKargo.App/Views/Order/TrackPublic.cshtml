
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> localizer
@using AlfaKuryer.Application.Dtos.OrderDtos;


@model OrderGetDto
@{
    ViewData["Title"] = "Tracking";
    int i = 0;
}
@section css{
    <link rel="stylesheet" href="~/assets/css/panel.css">

}
<section id="main-part">

    <div class="container">
        <div class="row d-flex justify-content-center">
            <article class="content col-8">
                <div class="row">
                    <div class="progress-container">
                        <div class="step-progress">
                            <div class="step @(Model.IsAccepted==true?"active":"")"><i class="uil uil-check"></i> <p class="text">Sifariş qəbul edildi</p></div>
                            <div class="step @(Model.IsCourierOnRoad==true?"active":"")"><i class="uil uil-check"></i> <p class="text">Kuryer sizə tərəf yollanır</p></div>
                            <div class="step @(Model.IsCourierArriveForTake==true?"active":"")"><i class="uil uil-check"></i> <p class="text">Kuryer çatdı</p></div>
                            <div class="step @(Model.IsCourierTaked==true?"active":"")"><i class="uil uil-check"></i> <p class="text">Kuryer götürdü</p></div>
                            <div class="step @(Model.IsInStorage==true?"active":"")"><i class="uil uil-check"></i>  <p class="text">Bağlama depoda</p></div>
                            <div class="step @(Model.IsOutStorage==true?"active":"")"><i class="uil uil-check"></i> <p class="text">Bağlama depodan çıxdı</p></div>
                            <div class="step @(Model.IsOnroadToForeignCity==true?"active":"")"><i class="uil uil-check"></i> <p class="text">Bağlama rayon istiqamətindədir</p></div>
                            <div class="step @(Model.IsInForeignCity==true?"active":"")"><i class="uil uil-check"></i> <p class="text">Bağlama Gəncədə</p></div>
                            <div class="step @(Model.IsOnRoad==true?"active":"")"><i class="uil uil-check"></i><p class="text">Bağlama sizə tərəf gəlir</p></div>
                            <div class="step @(Model.IsCourierArrive==true?"active":"")"><i class="uil uil-check"></i> <p class="text">Çatdı</p></div>
                            <div class="step @(Model.IsDelivered==true?"active":"")"><i class="uil uil-check"></i> <p class="text">Sifariş tamamıandı</p></div>
                        </div>
                    </div>

                </div>
            </article>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/assets/js/panel.js"></script>


}

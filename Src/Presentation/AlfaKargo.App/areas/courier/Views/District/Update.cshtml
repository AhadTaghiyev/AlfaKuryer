@using AlfaKuryer.Application.Dtos.DistrictDtos;
@using AlfaKargo.App.areas.ViewModels; 
@model UpdateVewModel<DistrictPostDto,DistrictGetDto>
<div class="card">
    <div class="card-header">
        Düzəliş et
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-md-12">

                <form asp-action="Update" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group  col-md-6">
                        <label class="control-label">BaşlıqAz</label>
                        <input asp-for="PostDto.Name" value="@Model.GetDto.Name;" class="form-control" />
                        <span asp-validation-for="PostDto.Name"></span>
                    </div>
                    <div class="form-group  col-md-6">
                        <label class="control-label">Şəhər</label>
                        <select asp-for="PostDto.CityId" class="form-control">
                            @foreach (var item in ViewBag.Cities)
                            {
                                if (Model.GetDto.CityId == item.Id)
                                {
                                    <option selected value="@item.Id">
                                        @item.Name
                                    </option>
                                }
                                else
                                {
                                    <option value="@item.Id">
                                        @item.Name
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="PostDto.CityId"></span>
                    </div>
                    <div class="col-md-12 mt-3">
                        <a class="btn btn-dark" asp-action="index"><i class="fas fa-undo"></i> Siyahıya geri dön</a>
                        <input type="submit" value="Yenilə" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>
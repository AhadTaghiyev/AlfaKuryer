@using AlfaKuryer.Application.Dtos.SlideDtos;
@model  IEnumerable<SlideGetDto>
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        Tariflər
    </div>
    <div class="card-body">

        <div class="text-center mb-3 mt-3">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yenisini əlavə et
            </a>
        </div>


        <div class="card-body">
            <table class="table">
                <tr>

                    <th>
                        Şəkil
                    </th>
                    <th></th>
                </tr>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/assets/imgs/Logo/@item?.Logo" width="100" height="100" alt="Alternate Text" />
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.Id"><i class="fas btn btn-primary fa-edit"></i></a>
                            <a class="btn btn-danger" onclick="return confirm('Silmək istədiyinizdən əminsiniz?');" asp-action="DeleteConfirmed" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

@using AlfaKargo.App.areas.ViewModels;
@using AlfaKuryer.Application.Dtos.RateDtos;
@model UpdateVewModel<RatePostDto,RateGetDto>

@{
    ViewData["Title"] = "Update";
}

<div class="card">
    <div class="card-header">
        Düzəliş et
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-md-12">

                <form asp-action="Update" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Haradan</label>
                        <input asp-for="PostDto.From" value="@Model.GetDto.From" class="form-control" />
                        <span asp-validation-for="PostDto.From" class="text-danger"></span>
                    </div>


                    <div class="form-group col-md-4">
                        <label class="control-label">Haradan</label>
                        <input asp-for="PostDto.To" value="@Model.GetDto.To" class="form-control" />
                        <span asp-validation-for="PostDto.To" class="text-danger"></span>
                    </div>


             
                </form>
            </div>
        </div>


    </div>
</div>

@using AlfaKuryer.Application.Dtos.DistrictDtos;
@model DistrictPostDto
<div class="card">
    <div class="card-header">
        Yenisini əlavə et
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-md-12">

                <form asp-action="Create" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group  col-md-6">
                        <label class="control-label">BaşlıqAz</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group  col-md-6">
                        <label class="control-label">Şəhər</label>
                        <select asp-for="CityId" class="form-control">
                          
                                @foreach (var item in ViewBag.Cities)
                                {
                                    <option value="@item.Id">
                                        @item.Name
                                    </option>
                                }
                           
                        </select>
                        <span asp-validation-for="CityId"></span>
                    </div>

                    <div class="col-md-12 mt-3">
                        <a class="btn btn-dark" asp-action="index"><i class="fas fa-undo"></i> Siyahıya geri dön</a>
                        <input type="submit" value="Əlavə et" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>
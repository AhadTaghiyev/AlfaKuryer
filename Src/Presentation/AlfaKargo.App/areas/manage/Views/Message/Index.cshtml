@using AlfaKuryer.Application.Dtos.MessageDto;
@model IEnumerable<MessageGetDto>
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        Tariflər
    </div>
    <div class="card-body">

        <div class="text-center mb-3 mt-3">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yenisini əlavə et
            </a>
        </div>

        <table class="table" data-emrah="partners">
            <thead>
                <tr>
                    <th>
                        Ad Soyad
                    </th>
                    
                    <th>
                        Email
                    </th>
                    <th>
                        Telefon
                    </th>
                    <th>
                        Mesaj
                    </th>




                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderByDescending(x=>x.Id))
                {
                    <tr data-id="@item.Id">
                        <td>
                            @item.FullName
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>

                        <td>
                            @item.Subject
                        </td>
                    </tr>
                }
            </tbody>
        </table>




    </div>
</div>

